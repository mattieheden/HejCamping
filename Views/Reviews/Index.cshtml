@model List<HejCamping.ApplicationServices.ReviewDTO>

<div class="container mt-4">
    <h1 class="mb-4">Current Reviews</h1>



<div class="row">
    @{ int count = 0; }
    @foreach (var review in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@review.ReviewText</h5><br>
                    <p class="card-text"><strong>@review.Name</strong></p>
                </div>
            </div>
        </div>
        count++; 
        @if (count % 3 == 0)
        {
            <div class="row"></div>
        }
    }
</div>
  
</div>
<container>
    <div class="container mt-4">    
        <a href="@Url.Action("CreateReview", "Reviews")" class="btn btn-primary">Create Review</a>
        <a href="@Url.Action("EditReview", "Reviews")" class="btn btn-primary">Edit Review</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary float-right">Back to Home</a>
    </div>
</container>
