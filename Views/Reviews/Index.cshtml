@model List<HejCamping.ApplicationServices.ReviewDTO>

<div class="container mt-4">
    <h1 class="mb-4">Reviews</h1>

    <div class="mb-3">
        <a href="@Url.Action("CreateReview", "Review")" class="btn btn-primary">Create Review</a>
            <i class="bi bi-plus-lg"></i>Create New Review
        </a>
    </div>

<div class="row">
    @{ int count = 0; }
    @foreach (var review in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@review.ReviewText</h5><br>
                    <p class="card-text"><strong>@review.Name</strong></p>
                </div>
            </div>
        </div>
        count++; 
        @if (count % 3 == 0)
        {
            <div class="row"></div>
        }
    }
</div>

<div class="container mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    <i class="bi bi-house"></i>Back to Home
</div>
