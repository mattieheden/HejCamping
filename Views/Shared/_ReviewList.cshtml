@model List<HejCamping.ApplicationServices.ReviewDTO>

@{ int count = 0; }
<div class="row">
    @foreach (var review in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@review.ReviewText</h5><br>
                    <p class="card-text"><strong>@review.Name</strong></p>
                </div>
            </div>
        </div>
        count++;
        @if (count % 3 == 0)
        {
            <div class="row"></div>
        }
    }
</div>