@model HejCamping.Domain.Review

<h1>Create Review</h1>

@if(!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            }
    </div>
}

<form asp-action="CreateReview" method="post">
    <div class="form-group">
        <label asp-for="ReviewText"></label>
        <input asp-for="ReviewText" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OrderNumber"></label>
        <input asp-for="OrderNumber" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}