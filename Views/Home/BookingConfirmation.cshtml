@model HejCamping.Models.BookingModel

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h2 style="text-align: center;">Booking Confirmation</h2>
<div style="max-width: 600px; margin: 0 auto; padding: 200px; text-align: center;">
    <h3>Thank you for your booking!</h3>
    <p>Your booking details are as follows:</p>
    <ul style="list-style-type: none; padding: 0;">
        <li><strong>Booking ID:</strong> @Model.BookingId</li>
        <li><strong>Campsite ID:</strong> @Model.CampsiteId</li>
        <li><strong>From Date:</strong> @Model.FromDate.ToString("yyyy-MM-dd")</li>
        <li><strong>To Date:</strong> @Model.ToDate.ToString("yyyy-MM-dd")</li>
        <li><strong>Name:</strong> @Model.Name</li>
        <li><strong>Email:</strong> @Model.Email</li>
    </ul>
    <p>We look forward to seeing you!</p>
</div>
